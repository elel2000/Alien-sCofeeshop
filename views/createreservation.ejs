<script>
    // Fetch the drinks JSON data from the server
    fetch('/drinks/drink')
        .then(response => response.json())
        .then(drinks => {
            console.log(drinks);
            // Get the select element
            const select = document.getElementById('drink_ordered');

            // Loop through the drinks and add them as options to the select
            drinks.forEach(drink => {
                const option = document.createElement('option');
                option.value = drink.id; // Assuming each drink has an 'id' property
                option.textContent = drink.name; // Set the text content to the drink name
                select.appendChild(option);
            });
        })
        .catch(error => console.error('Error:', error));
</script>
